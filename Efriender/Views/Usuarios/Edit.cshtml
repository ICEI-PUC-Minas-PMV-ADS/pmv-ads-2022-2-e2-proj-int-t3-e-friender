@using static EFriender.Models.Usuario
@model EFriender.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<div class="container">

<h1>Edit</h1>

<h4>Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="Genero" class="form-control" asp-items="Html.GetEnumSelectList<Generos>()"></select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Discord" class="control-label"></label>
                <input asp-for="Discord" class="form-control" />
                <span asp-validation-for="Discord" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Curso" class="control-label"></label>
                <input asp-for="Curso" class="form-control" />
                <span asp-validation-for="Curso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculdade" class="control-label"></label>
                <input asp-for="Faculdade" class="form-control" />
                <span asp-validation-for="Faculdade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preferencias" class="control-label"></label>
                <input asp-for="Preferencias" class="form-control" />
                <span asp-validation-for="Preferencias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JogosId" class="control-label"></label>
                <select asp-for="JogosId" class="form-control" asp-items="ViewBag.JogosId"></select>
                <span asp-validation-for="JogosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JogoSecundario" class="control-label"></label>
                    <input asp-for="Preferencias" class="form-control" />
                <span asp-validation-for="JogoSecundario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Perfil">Back to List</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        <script type="text/javascript">
            $(".custom-file-input").on("change", function(){
                var fileName = $(this).val().split("\\").pop();
                $(this).siblings(".custom-file-label").addClass("selected").html(fileName)
            });
        </script>
}
