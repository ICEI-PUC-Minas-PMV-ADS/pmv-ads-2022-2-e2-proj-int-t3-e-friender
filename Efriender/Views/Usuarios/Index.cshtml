@model IEnumerable<EFriender.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <h1>Usuários Cadastrados</h1>

    <a asp-action="Usuarios">Página Usuários</a>


    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Imagem)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Idade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Genero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discord)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Curso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Faculdade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preferencias)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jogo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                var ids = 0;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/imagens/@item.UrlImagem" width="75px" height="75px" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Idade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Genero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discord)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Faculdade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preferencias)
                    </td>
                    <td>
                        <img src="~/imagens/@Html.DisplayFor(modelItem => item.Jogo.UrlImagem)" width="75px" height="75px" />
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
                ids++;
            }
        </tbody>
    </table>
    <h1>Contagem: @ids</h1>
</div>


