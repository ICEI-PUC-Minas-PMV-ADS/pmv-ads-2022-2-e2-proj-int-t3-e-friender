@model IEnumerable<EFriender.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Anúncios Cadastrados</h1>

<hr />

<div class="d-flex col-12 flex-wrap justify-content-center">
    @foreach (var item in Model)
    {
        @if(item.Nome == User.Identity.Name)
        {
            <div class="rounded m-5 text-dark cardusuarious d-flex flex-column align-items-center justify-content-center col-4">
                @Html.DisplayFor(modelItem => item.Nome)
                <img class="border-2 border-white m-1 rounded" src="~/imagens/@item.UrlImagem" width="130px" height="130px" />
                @Html.DisplayFor(modelItem => item.Idade) anos
                <img src="~/imagens/@Html.DisplayFor(modelItem => item.Jogos.UrlImagem)" width="40px" height="40px" />
                <a class="btn btn-primary btn-sm mt-2" asp-action="Details" asp-route-id="@item.Id">Ver Mais</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-danger btn-sm m-1">Editar</a>
            </div>
        }
    }
</div>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Index"> Admin </a>
}

