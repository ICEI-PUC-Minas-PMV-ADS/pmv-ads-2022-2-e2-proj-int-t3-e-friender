@using Efriender.Models
@model Efriender.Models.Usuario


@{
    ViewData["Title"] = "Swipe";

}

<style>
    body{
        overflow-x:hidden;
    }
    
</style>



<div class="usuario-swipe flex-column">



    <div class="row justify-content-center">



        <div class="col my-auto mx-auto align-items-center d-flex justify-content-end">
            <div class="col col my-auto mx-auto align-items-center d-flex justify-content-end">

                <a class="btn btn-primary m-2" asp-action="Passar" asp-route-usuarioVistoID="@Model.Id" property="@Model.Id">Não é meu duo!</a>

            </div>

        </div>

        
        
        <div class="box-info background-grey mt-4 w-20 mx-auto col-sm text-center align-content-center justify-content-center center-block">

            <div class="gambiarra  rounded-circle overflow-hidden">
                <img class="overflow-hidden" src="~/imagens/@Model.UrlImagem" width="300px" height="300px" />
            </div>
            @Html.Raw(@ViewBag.Alert)
            @Html.Raw(TempData["msg"])
            
              <h4 class="text-white">@Model.Nome</h4>

            
                @if (Model.Jogo == null)
{
                    <h4 class="text-white">SEM JOGO SELECIONADO</h4>
} else {
    <h4 class="text-white">@Model.Jogo.Nome</h4>

                <h4 class="text-white">@Model.Curso</h4>



}


           
                
            <div class="botao-swipe justify-content-center d-grid gap-2"><a class="btn btn-primary mt-2 mb-2" asp-action="Details" asp-route-id="@Model.Id">Ver Perfil Completo</a></div>



            

        </div>

        <div class="col col my-auto mx-auto align-items-center d-flex justify-content-start">
            <a class="btn btn-primary btn-lg" asp-action="Match" asp-route-usuarioVistoID="@Model.Id" property="@Model.Id"><i class="fa-solid fa-thumbs-up"></i></a>
            </div>
        

       



        @*IndexAtual : @IndexAtual
        <br />
        Index Proximo: @IndexProximo
        <br />
        Index Anterior: @IndexAnterior
        <br />
        Ultimo Index: @UltimoIndex <br />
        Id Atual : @Model.Id <br />
        Id Proximo: @ViewBag.Id[IndexProximo] <br />
        Id Anterior: @ViewBag.Id[IndexAnterior] <br /> <br />
        Ultimo Id: @UltimoId <br />

        <br />

        Lista 0: @ViewBag.Id[0]<br />
        Lista 1:@ViewBag.Id[1]<br />
        Lista 2:@ViewBag.Id[2]<br />
        Lista 3: @ViewBag.Id[3]<br />
        Lista 4:@ViewBag.Id[4]<br />
        Lista 5:@ViewBag.Id[5]<br />
        Lista 6: @ViewBag.Id[6]<br />
        Lista 7:@ViewBag.Id[7]<br />*@


    </div>
    <div>

        
        @*<a class="btn btn-primary btn-lg" asp-action="Home">Voltar</a>*@
        
    </div>
</div>