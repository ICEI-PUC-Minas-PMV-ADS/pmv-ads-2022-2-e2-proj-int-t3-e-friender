@using EFriender.Models
@model EFriender.Models.Usuario


@{
    ViewData["Title"] = "Swipe";
}

<div class="flex-column">

    <div >

        <h4 class="text-center">Usuario</h4>
        <hr />


        <div class="w-25 mx-auto col-sm text-center align-content-center justify-content-center center-block border border-warning rounded">
            <div class="m-4 rounded-circle overflow-hidden">
                <img class="overflow-hidden" src="~/imagens/@Model.UrlImagem" width="300px" height="300px" />
            </div>
            
              <h4 class="opacity-50">@Model.Nome</h4>

                <h4 class="opacity-50">@Model.Curso</h4>

                <h4 class="opacity-50">@Model.Jogos.Nome</h4>

        </div>

        <hr />

        @{
            int IndexAtual = ViewBag.Id.IndexOf(Model.Id);
            int UltimoIndex = ViewBag.IdUltimo;
            int UltimoId = ViewBag.Id[UltimoIndex];
            int IndexProximo = IndexAtual + 1;
            int IndexAnterior = IndexAtual - 1;
            if (IndexAtual == 0)
            {
                IndexAnterior = UltimoIndex;
            }

            if (IndexAtual == UltimoIndex)
            {
                IndexProximo = 0;
            }
            int Proximo = ViewBag.Id[IndexProximo];
            int Anterior = ViewBag.Id[IndexAnterior];

        }



        @*IndexAtual : @IndexAtual
        <br />
        Index Proximo: @IndexProximo
        <br />
        Index Anterior: @IndexAnterior
        <br />
        Ultimo Index: @UltimoIndex <br />
        Id Atual : @Model.Id <br />
        Id Proximo: @ViewBag.Id[IndexProximo] <br />
        Id Anterior: @ViewBag.Id[IndexAnterior] <br /> <br />
        Ultimo Id: @UltimoId <br />

        <br />

        Lista 0: @ViewBag.Id[0]<br />
        Lista 1:@ViewBag.Id[1]<br />
        Lista 2:@ViewBag.Id[2]<br />
        Lista 3: @ViewBag.Id[3]<br />
        Lista 4:@ViewBag.Id[4]<br />
        Lista 5:@ViewBag.Id[5]<br />
        Lista 6: @ViewBag.Id[6]<br />
        Lista 7:@ViewBag.Id[7]<br />*@

        <div class="text-center m-3">
            <a class="btn btn-primary m-2" asp-route-id="@Anterior">Anterior</a>
            <a class="btn btn-primary btn-lg"><i class="fa-solid fa-gamepad"></i></a>
            <a class="btn btn-primary m-2" asp-route-id="@Proximo">Próximo</a>
        </div>




    </div>
    <div>


        <a asp-action="Usuarios">Voltar</a>
    </div>
</div>
