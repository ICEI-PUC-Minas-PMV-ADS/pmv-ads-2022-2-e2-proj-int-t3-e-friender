@using static EFriender.Models.Usuario
@model EFriender.Models.Usuario

@{
    ViewData["Title"] = "Create";
}


<h1>Cadastrar Perfil Usuário</h1>
<hr />
<div class="row">
    <div class="col-md-8 m-auto">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group  w-100 text-center imagemUsuario">
                <img class="rounded-circle" id="PreviewPhoto" src="~/imagens/FotoPadrao.png" alt="Imagem Padrão" width="200px" height="200px" margin="20px" />
            </div>

            <div class="form-group text-center">
                <div class="custom-file">
                    <input type="file"asp-for="Imagem" class="custom-file-input btn btn-primary mt-3" id="UploadedImage"
                           onchange="document.getElementById('PreviewPhoto').src = window.URL.createObjectURL(this.files[0])" title=" " />
                </div>
            </div>


    <div>

        <div class="col-md-12 d-flex flex-fill">
            <div class="form-group m-2 col-md-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

                    <div class="form-group m-2 col-md-4">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>

                    <div class="form-group m-2 col-md-4">
                <label asp-for="Genero" class="control-label"></label>
                <select asp-for="Genero" class="form-control" asp-items="Html.GetEnumSelectList<Generos>()"></select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
       </div>

                <div class="col-md-12 d-flex">


                    <div class="form-group m-2 col-md-3">
                <label asp-for="Nick" class="control-label"></label>
                <input asp-for="Nick" class="form-control" />
                <span asp-validation-for="Nick" class="text-danger"></span>
            </div>

                    <div class="form-group m-2 col-md-3">
                <label asp-for="Discord" class="control-label"></label>
                <input asp-for="Discord" class="form-control" />
                <span asp-validation-for="Discord" class="text-danger"></span>
            </div>

                    <div class="form-group m-2 col-md-3">
                <label asp-for="Curso" class="control-label"></label>
                <input asp-for="Curso" class="form-control" />
                <span asp-validation-for="Curso" class="text-danger"></span>
            </div>

                    <div class="form-group m-2 col-md-3">
                <label asp-for="Faculdade" class="control-label"></label>
                <input asp-for="Faculdade" class="form-control" />
                <span asp-validation-for="Faculdade" class="text-danger"></span>
            </div>
       </div>

                <div class="col-md-12 d-flex">

                    <div class="form-group m-2 col-md-4">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>

                    <div class="form-group m-2 col-md-4">
                <label asp-for="Preferencias" class="control-label"></label>
                <input asp-for="Preferencias" class="form-control" />
                <span asp-validation-for="Preferencias" class="text-danger"></span>
            </div>

                    <div class="form-group m-2 col-md-4">
                <label asp-for="JogosId" class="control-label"></label>
                <select asp-for="JogosId" class ="form-control" asp-items="ViewBag.JogosId"></select>
            </div>

       </div>
    </div>

            <div class="form-group text-center m-4">
                <input type="submit" value="Criar" class="btn btn-primary col-md-4 m-auto" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName)
        });
    </script>
}
